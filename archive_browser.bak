#!/usr/bin/env python3
import os
import mimetypes
from datetime import datetime, timezone
from pathlib import Path
from flask import Flask, request, send_from_directory, abort, render_template_string, url_for
from werkzeug.utils import safe_join

# >>>> CHANGE THIS if needed (asterix vs asterisk) <<<<
ARCHIVE_ROOT = Path("/var/spool/asterisk/monitor/67146").resolve()

# Optional: restrict to your LAN by binding host later to 0.0.0.0 but firewall accordingly.
app = Flask(__name__)

# Minimal allowlist of audio types commonly produced by Asterisk.
AUDIO_EXTS = {".wav", ".mp3", ".WAV", ".gsm", ".ulaw", ".alaw"}

TEMPLATE = r"""
